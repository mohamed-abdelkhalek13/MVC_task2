<form action="/Department/addToProject">
    <label>choose employee: </label>
    <select name="emp" id="emp">
        @foreach(var emp in Model)
        {
            <option value="@emp.id">@emp.fname @emp.minit @emp.lname</option>
        }    
    </select>
    <label >choose project: </label>
    <select name="projs" id="projs" multiple >
        @foreach (var p in ViewBag.dps)
        {
            <option  value="@p.id" >@p.name</option>
        }
    </select>
    <input type="submit" value="Add"/>
</form>