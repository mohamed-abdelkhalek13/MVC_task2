@{
    int index = 1;
}
<h1>Compnay projects</h1>
<table>
    <thead>
        <tr>
            <th class="p-4">#</th>
            <th class="p-4">Name</th>
            <th class="p-4">location</th>
            <th class="p-4">department</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td class="p-4">@(index++)</td>
                <td class="p-4">@p.name</td>
                <td class="p-4">@p.location</td>
                <td class="p-4">@p.department.name</td>
                <td><a asp-action="updateForm" asp-controller="Project" asp-route-id="@p.id">update</a></td>
                <td><a asp-action="deleteProject" asp-controller="Project" asp-route-id="@p.id">delete</a></td>
            </tr>
        }
        <tr>
            <td>
                <a asp-action="addProjectForm" asp-controller="Project">Add</a>
            </td>
        </tr>
    </tbody>
</table>